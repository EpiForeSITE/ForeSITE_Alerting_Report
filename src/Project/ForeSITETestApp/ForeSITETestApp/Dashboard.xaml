<UserControl x:Class="ForeSITETestApp.Dashboard"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            xmlns:local="clr-namespace:ForeSITETestApp"
            mc:Ignorable="d" 
            d:DesignHeight="800" d:DesignWidth="1000">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Button.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.CheckBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Shadows.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.ToggleButton.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style x:Key="NavButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Padding" Value="10"/>
                <Setter Property="Margin" Value="5"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="3">
                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#34495E"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="HeaderButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="#3498DB"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Padding" Value="10,5"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="3">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2980B9"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <!-- Defining grid layout: 1 column for sidebar, 1 for main content -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Background="White" Grid.Column="0" BorderBrush="#DDD" BorderThickness="0,0,1,0">
            <StackPanel Margin="10">

                <!-- Logo or Title -->
                <TextBlock Text="Dashboard"
                   Foreground="#222"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="10,20,10,30"/>

                <!-- Navigation Menu -->
                <Button x:Name="HomeButton"
                Content="Home"
                Style="{StaticResource NavButtonStyle}"
                Margin="5"
                Foreground="#333"
                Background="Transparent"
                Click="HomeButton_Click"/>

                <Button x:Name="SchedulerButton"
                Content="Scheduler"
                Style="{StaticResource NavButtonStyle}"
                Margin="5"
                Foreground="#333"
                Background="Transparent"
                Click="SchedulerButton_Click"/>

                <Button x:Name="ReportButton"
                Content="Reporter"
                Style="{StaticResource NavButtonStyle}"
                Margin="5"
                Foreground="#333"
                Background="Transparent"
                Click="ReportButton_Click"/>

                <Button x:Name="DataSourceButton"
                Content="Data Source Manager"
                Style="{StaticResource NavButtonStyle}"
                Margin="5"
                Foreground="#333"
                Background="Transparent"
                Click="DataSourceButton_Click"/>

                <Button x:Name="ModelButton"
                Content="Model Manager"
                Style="{StaticResource NavButtonStyle}"
                Margin="5"
                Foreground="#333"
                Background="Transparent"
                Click="ModelButton_Click"/>

                <Button x:Name="SettingButton"
                Content="Settings"
                Style="{StaticResource NavButtonStyle}"
                Margin="5"
                Foreground="#333"
                Background="Transparent"/>
            </StackPanel>
        </Border>


        <!-- Main Content Area -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Background="White" Grid.Row="0" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                <DockPanel LastChildFill="False">
                    <TextBlock x:Name="HeaderTitle" Text="Home" FontSize="18" FontWeight="Bold" Foreground="#2C3E50" VerticalAlignment="Center" Margin="10,0,0,0" DockPanel.Dock="Left"/>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right"  Margin="10">
                        <TextBlock Text="User " VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <Button x:Name="AddNotebookButton" Content="Data Analysis"  Margin="0,0,10,0" Click="AddNotebookButton_Click" />
                        <Button x:Name="AIButton"  Content="AI Helper"  Margin="0,0,10,0" Click="AIButton_Click"/>
                        <Button Content="Close" />
                    </StackPanel>
                </DockPanel>
            </Border>

            <!-- Content Area with Switchable Grids -->
            <Grid x:Name="btnAddModule" Grid.Row="1" Margin="20">
                <!-- Default Content Grid -->
                <Grid x:Name="DefaultContentGrid" Visibility="Visible">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Dashboard Cards -->
                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <Border Background="White" CornerRadius="5" Margin="0,0,0,10" Padding="15" BorderBrush="#E0E0E0" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Data Sources Supported" FontSize="16" FontWeight="SemiBold"/>
                                <TextBlock x:Name="DataSourceCountTextBlock" Text="{Binding DataSourceCount}" FontSize="24" FontWeight="Bold" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                        <Border Background="White" CornerRadius="5" Margin="0,0,0,10" Padding="15" BorderBrush="#E0E0E0" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Lastest COVID cases" FontSize="16" FontWeight="SemiBold"/>
                                <TextBlock Text="2,345" FontSize="24" FontWeight="Bold" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Chart Placeholder -->
                    <Border Grid.Column="1" Background="White" CornerRadius="5" Padding="15" BorderBrush="#E0E0E0" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Time Series Chart" FontSize="16" FontWeight="SemiBold"/>
                            <Image Source="C:\Users\taohe\source\repos\ForeSITETestApp\ForeSITETestApp\farrington_plot.png" Height="200" Margin="0,10,0,0" Stretch="Uniform"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Scheduler Grid -->
                <Grid x:Name="SchedulerGrid" Visibility="Collapsed">
                    <StackPanel Margin="0,0,10,0">

                      
                        <!-- Recipient Emails + Scheduler Table -->
                        <Border Background="White" CornerRadius="8" Margin="0,0,0,10" Padding="15" BorderBrush="#E0E0E0" BorderThickness="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <!-- Label -->
                                    <RowDefinition Height="Auto"/>
                                    <!-- Recipient -->
                                    <RowDefinition Height="*"  />
                                    <!-- Scheduler table -->
                                    <RowDefinition Height="Auto"/>
                                    <!-- Bittons -->
                                </Grid.RowDefinitions>

                                <!-- Label -->
                                <TextBlock Grid.Row="0"
                                    Text="Recipient's Emails"
                                    FontSize="16"
                                    FontWeight="SemiBold"
                                    Margin="0,0,0,5"/>

                                <!-- Recipient（one line for one email address） -->
                                <TextBox x:Name="RecipientEmailsBox"
                                    Grid.Row="1"
                                    AcceptsReturn="True"
                                    MinHeight="60"
                                    TextWrapping="Wrap"
                                    ToolTip="Enter email addresses, one per line"/>

                                <!-- Scheduler Table : include checkbox -->
                                <DataGrid x:Name="SchedulerTable"
                                    Grid.Row="2"
                                    Margin="0,10,0,10"
                                    AutoGenerateColumns="False"
                                    CanUserAddRows="False"
                                    HeadersVisibility="Column"
                                    RowHeaderWidth="0"
                                    SelectionMode="Extended"
                                    SelectionUnit="FullRow">
                                    <DataGrid.Columns>
                                       
                                        <DataGridTemplateColumn Header="" Width="60">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox IsChecked="{Binding IsSelected}"
                                                       Click="SchedulerSelectCheckBox_Click"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>


                                        <!-- Id  -->
                                        <DataGridTextColumn Header="Id"
                                        Width="60"
                                        Binding="{Binding Id}"
                                        IsReadOnly="True"/>

                                        <!--  Recipients  -->
                                        <DataGridTextColumn Header="Recipients"
                                        Width="200"
                                        Binding="{Binding Recipients}"/>

                                        <!--  AttachmentPath  -->
                                        <DataGridTextColumn Header="AttachmentPath"
                                        Width="*"
                                        Binding="{Binding AttachmentPath}"/>

                                        <!-- StartDate  -->
                                        <DataGridTextColumn Header="StartDate"
                                        Width="140"
                                        Binding="{Binding StartDate}"/>

                                        <!-- Freq  -->
                                        <DataGridTextColumn Header="Freq"
                                        Width="120"
                                        Binding="{Binding Freq}"/>
                                    </DataGrid.Columns>

                                </DataGrid>

                                <!-- buttons -->
                                <StackPanel Grid.Row="3"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Right">
                                    <Button Content="Delete"  Margin="0,0,10,0" Padding="14,6" Click="SchedulerDelete_Click"/>
                                    <Button Content="Save"    Margin="0,0,10,0" Padding="14,6" Click="SchedulerSave_Click"/>
                                    
                                </StackPanel>
                            </Grid>
                        </Border>

                        <StackPanel Orientation="Horizontal" Margin="0,12,0,0" VerticalAlignment="Center">
                            
                            <TextBlock Text="Task: " FontWeight="SemiBold" VerticalAlignment="Center"/>
                            <TextBlock Text="ForeSITE_Alerting_Scheduler" Margin="4,0,12,0" VerticalAlignment="Center"/>

                            
                            <TextBlock Text="Time:" FontWeight="SemiBold" Margin="8,0,6,0" VerticalAlignment="Center"/>
                            <ComboBox x:Name="HourSelector"
                                Width="70"
                                SelectedIndex="20"  
                                Margin="0,0,6,0"
                                VerticalAlignment="Center"/>
                                <TextBlock Text=":" VerticalAlignment="Center" />
                                <ComboBox x:Name="MinuteSelector"
                                    Width="70"
                                    SelectedIndex="0"    
                                    Margin="6,0,12,0"
                                    VerticalAlignment="Center"/>

                                    
                                <Button x:Name="BtnStart"
                                    Content="Start"
                                    Width="80"
                                    Margin="10,0,6,0"
                                    Click="SchedulerStart_Click"/>
                                <Button x:Name="BtnEnd"
                                    Content="End"
                                    Width="80"
                                    Click="SchedulerEnd_Click"/>
                        </StackPanel>



                    </StackPanel>
                </Grid>
                <!-- Reports Grid -->
                <Grid x:Name="ReportsGrid" Visibility="Collapsed">

                    <StackPanel Margin="0,0,10,0">
                        <StackPanel Margin="0,0,0,20">

                            <Border Background="White" CornerRadius="5" Padding="15" BorderBrush="#E0E0E0" BorderThickness="1">
                                <Grid x:Name="LoadDataButton1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="160"/>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="350"/>
                                        <ColumnDefinition Width="200"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Model Selector -->
                                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,10">
                                        <TextBlock Text="Model" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                        <ComboBox x:Name="ModelSelector"
                                             Width="150"
                                             HorizontalAlignment="Left"
                                             DisplayMemberPath="Name"
                                             SelectedIndex="4" SelectionChanged="ModelSelector_SelectionChanged"/>
                                    </StackPanel>

                                    <!-- History year back Selector (Farrington / Bayes / CDC)-->
                                    <StackPanel x:Name="YearBackPanel" Grid.Row="0" Grid.Column="1" Margin="10,0,0,10" Visibility="Collapsed">
                                        <TextBlock Text="Num of years back" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                        <ComboBox x:Name="YearBackSelector" SelectedIndex="0" Width="150" HorizontalAlignment="Left">
                                            <ComboBoxItem Content="3"/>
                                            <ComboBoxItem Content="5"/>
                                            <ComboBoxItem Content="1"/>
                                        </ComboBox>
                                    </StackPanel>

                                    <!-- Boda 参数：mc_munu -->
                                    <StackPanel x:Name="BodaPanel"
                                          Grid.Row="0" Grid.Column="1"
                                          Margin="10,0,0,10"
                                          Visibility="Collapsed">
                                        <TextBlock Text="Num of Sampled Vectors"
                                                  FontSize="14" FontWeight="SemiBold"
                                                  Margin="0,0,0,5"/>
                                        <TextBox x:Name="TxtMcMunu"
                                             Width="150"
                                             HorizontalAlignment="Left"
                                             Text="100"/>
                                    </StackPanel>

                                    <!-- EarsC1 参数：baseline -->
                                    <StackPanel x:Name="EarsC1Panel"
                                          Grid.Row="0" Grid.Column="1"
                                          Margin="10,0,0,10"
                                          Visibility="Collapsed">
                                        <TextBlock Text="Baseline(days)"
                                               FontSize="14" FontWeight="SemiBold"
                                               Margin="0,0,0,5"/>
                                        <TextBox x:Name="TxtBaseline"
                                               Width="150"
                                               HorizontalAlignment="Left"
                                               Text="7"/>
                                    </StackPanel>

                                    <!-- Data Source Selector -->
                                    <StackPanel Grid.Row="0" Grid.Column="2" Margin="10,0,0,10">
                                        <TextBlock Text="Data Source" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                        <ComboBox x:Name="DataSourceSelector" SelectedIndex="0" Width="150" HorizontalAlignment="Left"
                                          DisplayMemberPath="Name" ItemsSource="{Binding DataSources}"/>
                                    </StackPanel>

                                    <!-- Train Split Toggle -->
                                    <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,10,0">
                                        <CheckBox x:Name="TrainSplitCheckBox" Content="Use Train Split Ratio" IsChecked="True" Checked="TrainSplitCheckBox_Checked" Unchecked="TrainSplitCheckBox_Unchecked"/>
                                        <TextBox x:Name="TrainSplitRatioInput" Width="150" Margin="0,10,0,0"  />
                                        <StackPanel x:Name="DatePickersPanel" Orientation="Horizontal" Margin="0,10,0,0" Visibility="Collapsed">

                                            <TextBlock Text="Train End Date" FontSize="12" Margin="0,0,0,3"/>
                                            <DatePicker x:Name="TrainEndDatePicker" Width="150"/>


                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Date Range Selectors -->
                                    <StackPanel Grid.Row="0" Grid.Column="3"  Margin="8,0,0,3">
                                        <TextBlock Text="Schedule" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                        <StackPanel Orientation="Horizontal">
                                            <StackPanel Margin="0,0,20,0">
                                                <TextBlock Text="Begin Date" FontSize="12" Margin="0,0,0,3"/>
                                                <DatePicker x:Name="BeginDatePicker" Width="150"/>
                                            </StackPanel>
                                            <StackPanel>
                                                <TextBlock Text="Freq" FontSize="12" Margin="0,0,0,3"/>
                                                <ComboBox x:Name="FreqSelector" SelectedIndex="0" Width="150" HorizontalAlignment="Left">
                                                    <ComboBoxItem Content="By Week"/>
                                                    <ComboBoxItem Content="By Month"/>
                                                    <ComboBoxItem Content="By Day"/>
                                                </ComboBox>
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Threshold Input -->
                                    <StackPanel Grid.Row="1" Grid.Column="2" Margin="10,0,0,0">
                                        <TextBlock Text="Threshold" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                        <TextBox x:Name="ThresholdInput" Width="150" HorizontalAlignment="Left" />
                                    </StackPanel>

                                    <StackPanel Grid.Row="1" Grid.Column="3" Margin="10,0,0,0">
                                        
                                        <CheckBox x:Name="AbnormalReportFlag"
                                         Content="Abnormal Report Only"
                                         IsChecked="True"
                                         Width="180"
                                         HorizontalAlignment="Left"/>
                                    </StackPanel>

                                    <!-- Action Buttons -->
                                    <StackPanel Grid.Row="0" Grid.Column="4" Grid.RowSpan="3" Orientation="Vertical" Margin="10,0,0,0" VerticalAlignment="Center">
                                        <Button x:Name="AddTitleButton" Content="Add Title"  Margin="0,0,0,10" Click="AddTitleButton_Click" />
                                        <Button x:Name="AddCommentButton" Content="Add Comment"  Margin="0,0,0,10" Click="AddCommentButton_Click" />
                                        <Button x:Name="AddPlotButton" Content="Add Plot" Margin="0,0,0,10" Click="AddPlotButton_ClickAsync" />
                                       
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </StackPanel>
                        <!-- Report Image -->
                        <Border Background="White" CornerRadius="5" Margin="0,0,0,10" Padding="15" BorderBrush="#E0E0E0" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Report Visualization" FontSize="16" FontWeight="SemiBold"/>
                                <Canvas x:Name="DrawingCanvas" Height="200" Background="#ECF0F1"/>



                            </StackPanel>
                        </Border>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                            <Button x:Name="SchedulingButton" Content="Scheduling" Margin="0,0,10,0" Click="SchedulingButton_Click"/>
                            <Button x:Name="SaveButton" Content="Save Report"  Click="SaveButton_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <!-- Data Source Grid -->
                <Grid x:Name="DataSourceGrid" Visibility="Collapsed">
                    <StackPanel Margin="0,0,10,0">
                        <Border Background="White" CornerRadius="5" Margin="0,0,0,10" Padding="15" BorderBrush="#E0E0E0" BorderThickness="1">
                            <TabControl x:Name="DataSourceTabs" MinHeight="400">
                                <!-- Data Source List Tab -->
                                <TabItem Header="Data Sources">
                                    <StackPanel>
                                        <DataGrid x:Name="DataSourceTable" AutoGenerateColumns="False" CanUserAddRows="False" Margin="0,0,0,10" MinHeight="200">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                                                <DataGridTextColumn Header="Data Uri" Binding="{Binding DataURL}" Width="*"/>
                                                <DataGridTextColumn Header="Resource Uri" Binding="{Binding ResourceURL}" Width="*"/>
                                                <DataGridTextColumn Header="App Token" Binding="{Binding AppToken}" Width="*"/>
                                                <DataGridCheckBoxColumn Header="Real Time" Binding="{Binding IsRealtime}" Width="100"/>
                                                <DataGridCheckBoxColumn Header="Select" Binding="{Binding IsSelected}" Width="100"/>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button x:Name="AddDataSourceButton" Content="Add" Style="{StaticResource HeaderButtonStyle}" Margin="0,0,10,0" Click="AddDataSourceButton_Click"/>
                                            <Button x:Name="DeleteDataSourceButton" Content="Delete" Style="{StaticResource HeaderButtonStyle}" Click="DeleteDataSourceButton_Click"/>
                                        </StackPanel>
                                    </StackPanel>
                                </TabItem>
                            </TabControl>
                        </Border>
                    </StackPanel>
                </Grid>

                <!--Model Management Grid-->
                <Grid x:Name="ModelGrid" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>

                    </Grid.RowDefinitions>

                    <!-- top and button -->
                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>



                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <Button x:Name="btnAddNewModel" Content="Add Model" Margin="5" Padding="8,3" Click="btnAddModel_Click"/>
                            <Button x:Name="btnDeleteModel" Content="Delete Model" Margin="5" Padding="8,3" Click="btnDeleteModel_Click"/>
                        </StackPanel>
                    </Grid>
                    <!-- middle -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>




                        <!-- Left Model list -->
                        <Border Grid.Column="0" BorderThickness="1" BorderBrush="#DDDDDD" Background="#F5F5F5">
                            <DockPanel>
                                <TextBlock DockPanel.Dock="Top" Text="Module List" FontWeight="SemiBold" Padding="10,5" Background="#EEEEEE" />
                                <ListBox x:Name="lstModel" Margin="5" SelectionChanged="lstModel_SelectionChanged">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                               
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </DockPanel>
                        </Border>

                        <!-- Right Property List -->
                        <Grid Grid.Column="1" Margin="10,0,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Base Information -->
                            <Border Grid.Row="0" BorderThickness="1" BorderBrush="#DDDDDD" Padding="10" Background="#F9F9F9">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Full Name:" Margin="0,0,10,5" VerticalAlignment="Center"/>
                                    <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtFullModelName" Margin="0,0,20,5"/>
                                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Short Name:" Margin="0,0,10,5" VerticalAlignment="Center"/>
                                    <TextBox Grid.Row="0" Grid.Column="3" x:Name="txtModelName" Margin="0,0,20,5"/>

                                    <TextBlock Grid.Row="0" Grid.Column="4" Text="Type:" Margin="0,0,10,5" VerticalAlignment="Center"/>
                                    <ComboBox Grid.Row="0" Grid.Column="5" x:Name="cmbModelType" Margin="0,0,0,5">
                                        <ComboBoxItem Content="Python"/>
                                        <ComboBoxItem Content="R"/>
                                    </ComboBox>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Description:" Margin="0,5,10,0" VerticalAlignment="Top"/>
                                    <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="4" x:Name="txtModelDescription" 
                             Margin="0,5,0,0" TextWrapping="Wrap" AcceptsReturn="True" Height="60" 
                             VerticalScrollBarVisibility="Auto"/>

                                    <Button Grid.Row="1" Grid.Column="5" x:Name="btnSaveModel" Content="Save" 
                            HorizontalAlignment="Right" Margin="0,10,0,0" Padding="8,3" Click="btnSaveModel_Click"/>

                                </Grid>
                            </Border>

                            <!-- Property List -->
                            <Grid Grid.Row="1" Margin="0,10,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="Property" FontWeight="Bold"/>

                                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                                        <Button x:Name="btnAddProperty" Content="Add Property" Margin="5,0" Padding="8,3" Click="btnAddProperty_Click"/>
                                        <Button x:Name="btnDeleteProperty" Content="Del Property" Margin="5,0" Padding="8,3" Click="btnDeleteProperty_Click"/>
                                    </StackPanel>
                                </Grid>

                                <DataGrid Grid.Row="1" x:Name="dgProperties" Margin="0,5,0,0" AutoGenerateColumns="False" 
                          CanUserAddRows="False" CanUserDeleteRows="False" CanUserReorderColumns="False" 
                          HeadersVisibility="Column" SelectionMode="Single" 
                          CellEditEnding="dgProperties_CellEditEnding">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Property Name" Binding="{Binding Name}" Width="*"/>
                                        <DataGridTemplateColumn Header="Type" Width="*">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding Type}"/>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                            <DataGridTemplateColumn.CellEditingTemplate>
                                                <DataTemplate>
                                                    <ComboBox SelectedValue="{Binding Type, UpdateSourceTrigger=PropertyChanged}">
                                                        <ComboBoxItem Content="int"/>
                                                        <ComboBoxItem Content="float"/>
